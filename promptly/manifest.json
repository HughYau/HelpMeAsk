{
  "manifest_version": 3,
  "name": "Promptly: Your AI Prompt Optimizer",
  "version": "0.0.1",
  "description": "Optimize the Prompt you enter in the AI ​​conversation interface by calling the LLM API and provide replacement or regeneration options.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*", // 添加 DeepSeek API 域名
    "https://api.openai.com/*" // 保留 OpenAI 以便切换
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://*.deepseek.com/*" 
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
