{
  "manifest_version": 3,
  "name": "Promptly: Your AI Prompt Optimizer",
  "version": "0.0.1",
  "description": "Optimize the Prompt you enter in the AI ​​conversation interface by calling the LLM API and provide replacement or regeneration options.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://*.deepseek.com/*",
        "https://platform.openai.com/*",
        "https://console.anthropic.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "default_locale": "en"
}
